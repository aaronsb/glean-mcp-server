{
  "include": ["./src"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "target": "es2017",
    "module": "nodenext",
    "lib": ["es2022"],
    "outDir": "./build",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "moduleResolution": "nodenext",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "checkJs": true,
    "allowJs": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {}
  }
}
